{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "DOM"],
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "strictNullChecks": false,
    "types": ["node"],
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "@tests/*": ["./tests/*"],
      "@config/*": ["./tests/config/*"],
      "@constants/*": ["./tests/constants/*"],
      "@env/*": ["./tests/env/*"],
      "@helper/*": ["./tests/helper/*"],
      "@pages/*": ["./tests/pages/*"],
      "@specs/*": ["./tests/specs/*"],
      "@testdata/*": ["./tests/testdata/*"],
      "@types/*": ["./tests/types/*"]
    }
  },
  "exclude": ["node_modules"]
}